@using Recodme.RD.BoraNow.PresentationLayer.WebAPI.Models.Newsletters;

@model InterestPointNewsletterViewModel

<div class="card">
    <div class="card-header">
        <h2 class="float-left">
            @ViewData["Title"]
        </h2>
    </div>
    <div class="card-body">
        <h2>Edit Interest Point Newsletter</h2>
        <div class="row">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="=" text-danger></div>
                <div class="form-group">
                    <label asp-for="InterestPointId" class="control-label"></label>
                    <select asp-for="InterestPointId" class="form-control" asp-items="@ViewBag.InterestPoints"></select>
                    <span asp-validation-for="InterestPointId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewsLetterId" class="control-label"></label>
                    <select asp-for="NewsLetterId" class="form-control" asp-items="@ViewBag.Newsletters"></select>
                    <span asp-validation-for="NewsLetterId" class="text-danger"></span>
                </div>

                @Html.Hidden("Id", Model.Id)
                <div class="row">
                    <div class="form-group col-md-3">
                        <input type="submit" value="Update" class="btn btn-primary" />

                    </div>
                    <div class="col-md-2"></div>
                    <div class="form-group col-md-3">
                        <input type="button" value="Cancel" class="btn btn-danger" onclick="location.href='@Url.Action("Index","InterestPointNewsletters")';" />
                    </div>
                </div>               
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}