@using Recodme.RD.BoraNow.PresentationLayer.WebAPI.Models.Quizzes

@model IEnumerable<QuizAnswerViewModel>


<div class="card">
    <div class="card-header">
        <h2 class="float-left">
            BoraNow Quiz
        </h2>     
    </div>
    <div class="card-body">
        <div class="row">
            <div class="container">
                <h2>@Html.DisplayNameFor(x => x.QuizQuestionId)</h2>
                <br />
                @{
                    var questions = (ViewBag.QuizQuestions as List<QuizQuestionViewModel>).FirstOrDefault(x => x.Id == Model.First().QuizQuestionId);
                    <div class="row"><h4>@questions.Question</h4></div>
                }

                @foreach (var item in Model)
                {



                    <div class="row"><h5>@Html.RadioButtonFor(x => item.Answer, new { id = "btnQuarterDay" }) @item.Answer</h5></div>


                }
                <br />                
            <div class="row">
                <div class="form-group col-md-3">
                    <input type="submit" value="submit" class="btn btn-primary" />
                </div>
                <div class="form-group col-md-3">
                    <input type="button" value="Cancel" class="btn btn-danger" onclick="location.href='@Url.Action("Index","Home")';" />
                </div>
            </div>
            </div>
          
        </div>
    </div>
</div>

