@using Recodme.RD.BoraNow.PresentationLayer.WebAPI.Models.Quizzes

@model IEnumerable<QuizAnswerViewModel>

<h2>Quiz Aswers</h2>
<br />
<p class="float-left mt-2 mb-0">

    <a asp-controller="QuizAnswers" asp-action="Create" class="text-white btn btn-success"><i class="fas fa-plus mr-1"></i>Create</a>
</p>
<br />
<br />
<br />

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table id="listTable" class="table">
                <thead>
                    <tr>
                        <th class="no-sort w-1"></th>
                        <th class="w-1">@Html.DisplayNameFor(model => model.Answer)</th>
                        <th class="w-1">@Html.DisplayNameFor(model => model.QuizQuestionId)</th>
                        <th class="no-sort"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var quizAnswer in Model)
                    {
                    <tr>
                        <td>
                            <a asp-action="Edit" asp-route-id="@quizAnswer.Id">Edit</a>
                            <a asp-action="Details" asp-route-id="@quizAnswer.Id">Details</a>
                            <a asp-action="Delete" asp-route-id="@quizAnswer.Id">Delete</a>
                        </td>
                        @{

                            var answer = (ViewBag.QuizQuestions as List<QuizQuestionViewModel>).FirstOrDefault(x => x.Id == quizAnswer.QuizQuestionId);
                        }

                        <td>
                            @Html.DisplayFor(x => quizAnswer.Answer) 
                        </td>
                        <td>
                            <a asp-controller="QuizAnswers" asp-action="Details" asp-route-id="@answer.Id">@answer.Question</a>
                        </td>

                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
