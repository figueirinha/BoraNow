@using Recodme.RD.BoraNow.PresentationLayer.WebAPI.Models.Quizzes;

@model QuizAnswerViewModel
<h2>Details</h2>

<div class="card">
    <div class="card-header">
        <h2 class="float-left">
            @ViewData["Title"]
        </h2>
    </div>
    <div class="card-body">
        <div class="ml-5 mr-5">
            <h3>Quiz Answer Details</h3>

            <dl class="row">
                <dt class="col-2">
                    @Html.DisplayNameFor(model => model.Answer)
                </dt>
                <dd class="col-10">
                    @Html.DisplayFor(model => model.Answer)
                </dd>

                @{ var qq = ViewData["QuizQuestion"] as QuizQuestionViewModel;
                }

                <dt class="col-2">
                    @Html.DisplayNameFor(model => model.QuizQuestionId)
                </dt>
                <dd class="col-10">

                    <a asp-controller="QuizQuestions" asp-action="Details" asp-route-id="@qq.Id">@qq.Question</a>
                </dd>

            </dl>

            <div class="row">
                <div class="form-group col-md-3">
                    <input type="button" value="Back" class="btn btn-secondary" onclick="location.href='@Url.Action("Index","QuizQuestions")';" />
                </div>
            </div>
        </div>
    </div>
</div>



