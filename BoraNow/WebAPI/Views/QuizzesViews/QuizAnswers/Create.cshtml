@using Recodme.RD.BoraNow.PresentationLayer.WebAPI.Models.Quizzes;

@model QuizAnswerViewModel

@{ ViewBag.Title = "Create"; }

<div class="card">
    <div class="card-header bg-greenish-green">
        <h2 class="float-left">
            @ViewData["Title"]
        </h2>
    </div>
    <div class="card-body">
        <div class="ml-5 mr-5">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="Answer" class="control-label"></label>
                    <input asp-for="Answer" class="form-control ml-2" />
                    <span asp-validation-for="Answer" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="QuizQuestionId" class="control-label"></label>
                    <div>
                        <select asp-for="QuizQuestionId" class="form-control fk-select" asp-items="@ViewBag.QuizQuestions">
                            <option></option>
                        </select>
                    </div>
                    <span asp-validation-for="QuizQuestionId" class="text-danger"></span>
                </div>

                <div class="form-group ml-4">
                    <input type="submit" value="Submit" class="btn btn-outline-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}







