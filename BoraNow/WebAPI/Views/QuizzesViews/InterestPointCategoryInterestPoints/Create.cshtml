@using Recodme.RD.BoraNow.PresentationLayer.WebAPI.Models.Quizzes;

@model InterestPointCategoryInterestPointViewModel

@{ViewBag.Title = "Create";}

<div class="card">
    <div class="card-header">
        <h2 class="float-left">
            @ViewData["Title"]
        </h2>
    </div>
    <div class="card-body table-responsive">
        <h2>Create Result</h2>
        <br />
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <form asp-action="Create">
                        <h3>
                            Insert the Result Data
                        </h3>
                        <div class="form-row">

                            <div class="form-group">
                                <label asp-for="InterestPointId" class="control-label"></label>
                                <select asp-for="InterestPointId" class="form-control" asp-items="@ViewBag.InterestPoints"></select>
                                <span asp-validation-for="InterestPointId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryId" class="control-label"></label>
                                <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.CategoryInterestPoints"></select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>

                            <br />
                            <div class="row">
                                <div class="col-md-1"></div>
                                <div class="form-group col-md-3">
                                    <input type="button" value="Cancel" onclick="location.href='@Url.Action("Index","InterestPointCategoryInterestPoints")';" />
                                </div>
                                <div class="col-md-2"></div>
                                <div class="form-group col-md-3">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </div>
                    </form>

                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
