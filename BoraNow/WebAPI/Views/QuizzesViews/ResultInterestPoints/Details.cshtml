@using Recodme.RD.BoraNow.PresentationLayer.WebAPI.Models.Quizzes;

@model ResultInterestPointViewModel

<<div class="card">
    <div class="card-header">
        <h2 class="float-left">
            @ViewData["Title"]
        </h2>
    </div>
    <div class="card-body">
        <div class="ml-5 mr-5">
            @{
                var ip = ViewData["InterestPoints"] as InterestPointViewModel;
                var r = ViewData["Results"] as ResultViewModel;
            }
            <dl class="row">
                <dt class="col-3">
                    @Html.DisplayNameFor(model => model.InterestPointId)
                </dt>
                <dd class="col-9">
                    <a asp-controller="InterestPoints" asp-action="Details" asp-route-id="@ip.Id">@ip.Name</a>
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-3">
                    @Html.DisplayNameFor(model => model.ResultId)
                </dt>
                <dd class="col-9">

                    <a asp-controller="Results" asp-action="Details" asp-route-id="@r.Id">@r.Title</a>
                </dd>
            </dl>
        </div>
        <div class="form-group col-md-3">
            <input type="button" value="Go Back" class="btn btn-secondary" onclick="location.href='@Url.Action("Index","ResultInterestPoints")';" />
        </div>
    </div>
</div>
