@using Recodme.RD.BoraNow.PresentationLayer.WebAPI.Models.Quizzes;

@model QuizViewModel
<h2>Details</h2>

<div class="card">
    <div class="card-header">
        <h2 class="float-left">
            @ViewData["Title"]
        </h2>
    </div>
    <div class="card-body">
        <div class="ml-5 mr-5">
            <dl class="row">
                <dt class="col-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
            </dl>
        </div>
        <div class="row">
            <div class="form-group col-md-3">
                <input type="button" value="Back" class="btn btn-secondary" onclick="location.href='@Url.Action("Index","Quizzes")';" />
            </div>
        </div>
    </div>
</div>

