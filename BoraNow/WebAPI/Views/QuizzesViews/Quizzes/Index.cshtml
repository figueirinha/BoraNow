@using Recodme.RD.BoraNow.PresentationLayer.WebAPI.Models.Quizzes

@model IEnumerable<QuizViewModel>

<div class="card">
    <div class="card-header">
        <h2 class="float-left">
            @ViewData["Title"]
        </h2>
        <p class="float-right mt-2 mb-0">

            <a asp-controller="Quizzes" asp-action="Create" class="btn btn-outline-light"><i class="fas fa-plus mr-1"></i>New</a>
        </p>
    </div>
    <div class="card-body table-responsive">
        <table class="table table-hover" id="listTable">
            <thead>
                <tr>
                    <th class="no-sort"></th>
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <th class="no-sort"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="w-1">
                            <a class="link-details" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-search mr-2"></i></a>
                            <a class="link-edit" asp-controller="Quizzes" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit mr-2"></i></a>
                            <a id="deleteItem" onclick="ConfirmDelete('@item.Id')"><i class="link-delete fas fa-trash"></i></a>
                        </td>
                        
                        <td class="w-1">@Html.DisplayFor(x => item.Title)</td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modal" tabindex="-1" role="basic" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Delete Confirmation</h4>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this item?
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" type="button" class="btn btn-default">Cancel</button>
                <a id="deleteBtn" class="btn btn-primary" asp-action="Delete" asp-route-id="">Delete</a>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="idToDelete" />
<script>

    var ConfirmDelete = function (id) {
        $("#deleteBtn").attr("href", "@ViewData["DeleteHref"]" + "/" + id);
        $("#modal").modal('show');
    }

    $(document).ready(function () {
        $('#listTable').DataTable({
            "order": [],
            "columnDefs": [{
                "targets": 'no-sort',
                "orderable": false,
            }]
        });
    });
</script>