@using Recodme.RD.BoraNow.PresentationLayer.WebAPI.Models.Quizzes;

@model InterestPointViewModel
@{
    ViewBag.Title = "Update";
}

<h2>InterestPoint - @Model.Name</h2>
<br />
<div class="row">
    <form asp-action="Edit" class="pl-4">
        <div asp-validation-summary="ModelOnly" class="=" text-danger></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhotoPath" class="control-label"></label>
            <input asp-for="PhotoPath" class="form-control" />
            <span asp-validation-for="PhotoPath" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="OpeningHours" class="control-label"></label>
            <input asp-for="OpeningHours" class="form-control" />
            <span asp-validation-for="OpeningHours" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ClosingHours" class="control-label"></label>
            <input asp-for="ClosingHours" class="form-control" />
            <span asp-validation-for="ClosingHours" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ClosingDays" class="control-label"></label>
            <input asp-for="ClosingDays" class="form-control" />
            <span asp-validation-for="ClosingDays" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CovidSafe" class="control-label"></label>
            <input asp-for="CovidSafe" class="form-control" />
            <span asp-validation-for="CovidSafe" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Status" class="control-label"></label>
            <input asp-for="Status" class="form-control" />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        @Html.Hidden("Id", Model.Id)
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
        <div class="form-group col-md-3">
            <input type="button" value="Cancel" onclick="location.href='@Url.Action("Index","InterestPoints")';" />
        </div>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}