@using Recodme.RD.BoraNow.PresentationLayer.WebAPI.Models.Users;

@model ProfileViewModel

@{ViewBag.Title = "Create";}

<div class="card">
    <div class="card-header">
        <h2 class="float-left">
            @ViewData["Title"]
        </h2>
    </div>
    <div class="card-body table-responsive">
        <br />
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <form asp-action="Create">
                        <h3>
                            Insert the Profile Data
                        </h3>
                        <div class="form-row">
                            <div asp-validation-summary="ModelOnly" class="=" text-danger></div>
                            <div class="form-group col-md-6">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group col-6">
                                <label asp-for="PhotoPath" class="control-label"></label>
                                <input asp-for="PhotoPath" type="file" class="form-control-file" />
                                <span asp-validation-for="PhotoPath" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="CountryId" class="control-label"></label>
                            <select asp-for="CountryId" class="form-control" asp-items="@ViewBag.Countries"></select>
                            <span asp-validation-for="CountryId" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="row">
                            <div class="form-group col-md-3">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                            <div class="form-group col-md-3">
                                <input type="button" value="Cancel" class="btn btn-danger" onclick="location.href='@Url.Action("Index","Profiles")';" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
</script>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}