@using Recodme.RD.BoraNow.PresentationLayer.WebAPI.Models.Users;

@model ProfileViewModel

<div class="card">
    <div class="card-header">
        <h2 class="float-left">
            @ViewData["Title"]
        </h2>
    </div>
    <div class="card-body">
        <div class="ml-5 mr-5">
            <h3>Profile Details</h3>

            <dl class="row">
                <dt class="col-3">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-9">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-3">
                    @Html.DisplayNameFor(model => model.PhotoPath)
                </dt>
                <dd class="col-9">
                    @Html.DisplayFor(model => model.PhotoPath)
                </dd>
            </dl>

        </div>
        <div class="form-group col-md-3">
            <input type="button" value="Go Back" class="btn btn-secondary" onclick="location.href='@Url.Action("Index","Profiles")';" />
        </div>
    </div>
</div>
