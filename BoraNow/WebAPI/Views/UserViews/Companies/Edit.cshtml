@using Recodme.RD.BoraNow.PresentationLayer.WebAPI.Models.Users;

@model CompanyViewModel

@{ ViewBag.Title = "Update"; }

<h2>Company - @Model.Name</h2>
<br />
<div class="row">
    <form asp-action="Edit" class="pl-4">
        <div asp-validation-summary="ModelOnly" class="=" text-danger></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Representative" class="control-label"></label>
            <input asp-for="Representative" class="form-control" />
            <span asp-validation-for="Representative" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="PhoneNumber" class="control-label"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="VatNumber" class="control-label"></label>
            <input asp-for="VatNumber" class="form-control" />
            <span asp-validation-for="VatNumber" class="text-danger"></span>
        </div>
  
        @Html.Hidden("Id", Model.Id)
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
