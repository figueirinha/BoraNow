@using Recodme.RD.BoraNow.PresentationLayer.WebAPI.Models.Users

@model VisitorViewModel

@{
    ViewBag.Title = "Update";
}

<h2>Visitor - @Model.FirstName @Model.LastName</h2>
<br />
<div class="row">
    <form asp-action="Edit" class="pl-4">
        <div asp-validation-summary="ModelOnly" class="=" text-danger></div>
        <div class="form-group">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BirthDate" class="control-label"></label>
            <input asp-for="BirthDate" class="form-control" />
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gender" class="control-label"></label>
            <label asp-for="Gender" class="control-label"></label>
            @{
                List<SelectListItem> listItems = new List<SelectListItem>();
                listItems.Add(new SelectListItem
                {
                    Text = "Female",
                    Value = "Female",
                });
                listItems.Add(new SelectListItem
                {
                    Text = "Male",
                    Value = "Male",
                });
            }

            @Html.DropDownListFor(model => model.Gender, listItems, "-- Select Gender --")
            <span asp-validation-for="Gender" class="text-danger"></span>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>   
        @Html.Hidden("Id", Model.Id)
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}