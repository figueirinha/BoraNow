@using Recodme.RD.BoraNow.PresentationLayer.WebAPI.Models.Users

@model VisitorViewModel


<div class="card">
    <div class="card-header">
        <h2 class="float-left">
            @ViewData["Title"]
        </h2>
    </div>
    <div class="card-body table-responsive">
        <div>
            <h2>Visitor @Model.FullName details</h2>
            <dl class="row">
                <dt class="col-2">
                    @Html.DisplayNameFor(model => model.FirstName)

                </dt>
                <dd class="col-10">
                    @Html.DisplayFor(model => model.FirstName)
                </dd>
                <dt class="col-2">
                    @Html.DisplayNameFor(model => model.LastName)
                </dt>
                <dd class="col-10">
                    @Html.DisplayFor(model => model.LastName)
                </dd>
                <dt class="col-2">
                    @Html.DisplayNameFor(model => model.BirthDateToString)
                </dt>
                <dd class="col-10">
                    @Html.DisplayFor(model => model.BirthDateToString)
                </dd>
                <dt class="col-2">
                    @Html.DisplayNameFor(model => model.Gender)
                </dt>
                <dd class="col-10">
                    @Html.DisplayFor(model => model.Gender)
                </dd>
            </dl>
        </div>
        <div class="form-group col-md-3">
            <input type="button" value="Go Back" onclick="location.href='@Url.Action("Index","Visitors")';" />
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {
        $('#listTable').DataTable({
            "order": [],
            "columnDefs": [{
                "targets": 'no-sort',
                "orderable": false,
            }]
        });
    });
</script>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}